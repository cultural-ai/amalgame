@prefix  clbase:  <../ClioPatria/ontologies/base/> .
@prefix	   align: <http://knowledgeweb.semanticweb.org/heterogeneity/alignment#> .
@prefix amalgame: <http://purl.org/vocabularies/amalgame#> .
@prefix      lib: <http://www.swi-prolog.org/rdf/library/> .
@prefix      owl: <http://www.w3.org/2002/07/owl#> .
@prefix	 dcterms: <http://purl.org/dc/terms/> .
@prefix	     opm: <http://openprovenance.org/ontology#> .

:amalgame
        a lib:Namespace ;
        lib:mnemonic "amalgame" ;
        lib:namespace amalgame: .

:align
        a lib:Namespace ;
        lib:mnemonic "align" ;
        lib:namespace align: .

:opm
        a lib:Namespace ;
        lib:mnemonic "opm" ;
        lib:namespace opm: .

<alignmentschema>
	a lib:Ontology ;
	a lib:Virtual ;
	dcterms:title "Schema for the Alignment format"@en ;
	lib:source align: ;
	owl:imports
		# <align.rdfs> .
		<align.owl> .

<opm>
	a lib:Ontology ;
	a lib:Virtual ;
	dcterms:title "Schema for the Alignment format"@en ;
	lib:source <http://openprovenance.org/model/> ;
	owl:imports <opm.owl> .

<Amalgame>
	a lib:Ontology ;
	a lib:Virtual ;
	dcterms:title "Schema for the Amalgame RDF vocabulary"@en ;
	lib:source amalgame: ;
	owl:imports
		clbase:skos ,
		<opm> ,
		<alignmentschema> ,
		<amalgame.ttl> .


