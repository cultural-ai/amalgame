:- module(source_candidates,
	  [
	  ]
	 ).

:- use_module(library(semweb/rdf_db)).
:- use_module(library(amalgame/alignment_graph)).

:- public candidate/4.
:- multifile amalgame:component/2.

amalgame:component(candidate, source_candidates(align_source, alalign(uri, uri, provendence_list), [])).

%%	candidate_generator(+Source, +Target, -Alignment, +Options)

candidate(Source, _Target, A, Options) :-
	(   ground(A)
	->  A = align(Source, _, _)
	;   A = align(Source, _, [])
	),
	graph_member(S, Source).
